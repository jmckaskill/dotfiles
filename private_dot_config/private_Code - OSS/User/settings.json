{
    "editor.minimap.enabled": false,
    "workbench.activityBar.location": "hidden",
    "window.menuBarVisibility": "toggle",
    "git.confirmSync": false,
    "git.autofetch": true,
    "files.autoSave": "onFocusChange",
    "editor.formatOnSave": true,
    "git.enableSmartCommit": true,
    "workbench.preferredDarkColorTheme": "Monokai Vibrant",
    "workbench.preferredLightColorTheme": "geal-color-theme-light",
    "workbench.colorTheme": "Monokai Vibrant",
    "html.format.enable": false,
    "editor.fontFamily": "'Martian Mono Std Lt'",
    "editor.fontSize": 14,
    "editor.lineHeight": 20,
    "workbench.sideBar.location": "right",
    "rust-analyzer.debug.engineSettings": {
        "internalConsoleOptions": "neverOpen",
    },
    // "lldb.showDisassembly": "never",
    "rust-analyzer.rustfmt.extraArgs": [
        "+nightly",
    ],
    "workbench.editor.closeOnFileDelete": true,
    "explorer.confirmDelete": false,
    "git.openRepositoryInParentFolders": "never",
    "rust-analyzer.check.command": "clippy",
    "lldb.launch.initCommands": [
        "process handle --pass true --stop false SIGBUS",
        "process handle --pass true --stop false SIGUSR2",
    ]
}